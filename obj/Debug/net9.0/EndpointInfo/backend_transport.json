{
  "openapi": "3.0.1",
  "info": {
    "title": "Transport backend",
    "version": "v1.0.0."
  },
  "paths": {
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/modulos/permiso": {
      "post": {
        "tags": [
          "PermisosModulos"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Permisos"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Permisos"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Permisos"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/modulos/permitidos/{idRol}": {
      "get": {
        "tags": [
          "PermisosModulos"
        ],
        "parameters": [
          {
            "name": "idRol",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/RoleConrtoller/create": {
      "post": {
        "tags": [
          "RoleConrtoller"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RoleModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RoleModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RoleModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/RoleConrtoller/list": {
      "get": {
        "tags": [
          "RoleConrtoller"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/ToolsConrtoller": {
      "get": {
        "tags": [
          "ToolsConrtoller"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/ToolsConrtoller/secure": {
      "get": {
        "tags": [
          "ToolsConrtoller"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginModel": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Modulos": {
        "required": [
          "nombre"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "descripcion": {
            "maxLength": 250,
            "type": "string",
            "nullable": true
          },
          "id_Padre": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "Permisos": {
        "required": [
          "rolId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "moduloId": {
            "type": "integer",
            "format": "int32"
          },
          "modulo": {
            "$ref": "#/components/schemas/Modulos"
          },
          "rolId": {
            "type": "string",
            "nullable": true
          },
          "rol": {
            "$ref": "#/components/schemas/RolIdentity"
          },
          "ver": {
            "type": "boolean"
          },
          "agregar": {
            "type": "boolean"
          },
          "eliminar": {
            "type": "boolean"
          },
          "actualizar": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "RegisterModel": {
        "required": [
          "codEmpresa",
          "email",
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          },
          "codEmpresa": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RolIdentity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "normalizedName": {
            "type": "string",
            "nullable": true
          },
          "concurrencyStamp": {
            "type": "string",
            "nullable": true
          },
          "codEmpresa": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RoleModel": {
        "required": [
          "codEmpresa",
          "roleName"
        ],
        "type": "object",
        "properties": {
          "roleName": {
            "type": "string",
            "nullable": true
          },
          "codEmpresa": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Ingrese el token JWT en el formato: Bearer {token}",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}